{
  "id": "com.myselfmonart.mockup.categories",
  "name": "Mockup Categories Server",
  "version": "1.0.0",
  "main": "index.html",
  "manifestVersion": 5,
  "host": {
    "app": "PS",
    "minVersion": "27.1.0"
  },
  "requiredPermissions": {
    "localFileSystem": "fullAccess",
    "network": {
      "domains": [
        "http://localhost:8081",
        "ws://localhost:8081",
        "http://localhost:3001",
        "https://*"
      ]
    },
    "webview": {
      "allow": "yes",
      "domains": ["*"]
    }
  },
  "entrypoints": [
    {
      "type": "panel",
      "id": "mockup-categories-panel",
      "label": "Mockup Categories",
      "minimumSize": { "width": 400, "height": 300 },
      "maximumSize": { "width": 800, "height": 600 },
      "preferredDockedSize": { "width": 400, "height": 400 },
      "preferredFloatingSize": { "width": 400, "height": 400 }
    }
  ],
  "icons": [
    {
      "width": 32,
      "height": 32,
      "path": "icons/myselfmonart_48x48.png",
      "scale": [1, 2],
      "theme": ["dark", "darkest", "lightest", "light"],
      "species": ["generic"]
    }
  ]
}
