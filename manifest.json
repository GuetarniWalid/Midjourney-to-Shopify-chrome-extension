{
  "manifest_version": 3,
  "name": "Midjourney to Shopify",
  "description": "A Chrome extension to transform a Midjourney image into a Shopify product",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.midjourney.com/*"],
      "js": ["config.prod.js", "card.js", "event.js", "logo.js", "content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["config.prod.js", "card.js", "event.js", "logo.js"],
    "matches": ["*://*.midjourney.com/*"]
  }],
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.midjourney.com/*",
    "<all_urls>"
  ]
} 